<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.IgriceActivities.Asocijacije">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#97BFE8"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="@dimen/activity_main_absoluteX">

        <Space
            android:layout_width="match_parent"
            android:layout_height="29dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/a4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/a"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/dugme20" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/aOdgovor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:hint="odgovor"
                        android:textColor="#1FAED3"
                        android:textSize="23dp"
                        android:textStyle="bold|italic" />

                    <ImageButton
                        android:id="@+id/daljeA"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:contentDescription="dalje"
                        app:srcCompat="@drawable/dalje" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="45dp"
                    android:layout_height="221dp"
                    android:layout_weight="1" />
            <TextView
                android:id="@+id/vreme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textColor="#1499D5"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/b"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/dugme20" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/bOdgovor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:hint="odgovor"
                        android:textColor="#009688"
                        android:textSize="23dp"
                        android:textStyle="bold|italic" />

                    <ImageButton
                        android:id="@+id/daljeB"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:contentDescription="dalje"
                        app:srcCompat="@drawable/dalje" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/konacno"
                android:layout_width="190dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/dugme21" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/konacanOdgovor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
                android:hint="odgovor"
                android:textColor="#009688"
                android:textSize="23dp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/daljeKonacno"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:contentDescription="dalje"
                app:srcCompat="@drawable/dalje" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/c"
                        android:layout_width="160dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/dugme20" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cOdgovor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:hint="odgovor"
                        android:textColor="#009688"
                        android:textSize="23dp"
                        android:textStyle="bold|italic" />

                    <ImageButton
                        android:id="@+id/daljeC"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:contentDescription="dalje"
                        app:srcCompat="@drawable/dalje" />
                </RelativeLayout>

                <Button
                    android:id="@+id/c1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/c2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/c3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/c4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

            </LinearLayout>

            <Space
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/d"
                        android:layout_width="160dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/dugme20" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dOdgovor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:hint="odgovor"
                        android:textColor="#009688"
                        android:textSize="23dp"
                        android:textStyle="bold|italic" />

                    <ImageButton
                        android:id="@+id/daljeD"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:contentDescription="dalje"
                        app:srcCompat="@drawable/dalje" />
                </RelativeLayout>

                <Button
                    android:id="@+id/d1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/d2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/d3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/d4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#62EC8E"
                    android:text="Button"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/naslov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" asocijacije "
                android:textColor="#EA3270"
                android:textSize="40sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/logo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>