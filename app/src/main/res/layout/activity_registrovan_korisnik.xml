<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.KorisnikActivities.RegistrovanKorisnik">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#97BFE8"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="@dimen/activity_main_absoluteX">

        <Button
            android:id="@+id/odjava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#1499D5"
            android:text="odjavi se"
            android:textSize="18dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="528dp"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center|right">

                    <ImageButton
                        android:id="@+id/jedanIgrac"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:contentDescription="jedanIgrac"
                        app:srcCompat="@drawable/dugme2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="igraj sam"
                        android:textColor="#000000"
                        android:textSize="23dp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="156dp"
                    android:layout_gravity="center">

                    <ImageButton
                        android:id="@+id/dvaIgraca"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:contentDescription="dva"
                        app:srcCompat="@drawable/dugme8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="igraj u dvoje"
                        android:textColor="#000000"
                        android:textSize="23dp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="27dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_gravity="left">

                    <ImageButton
                        android:id="@+id/prijatelji"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@null"
                        android:contentDescription="prijatelji"
                        app:srcCompat="@drawable/dugme9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="igraj sa prijateljem"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="23dp"
                        android:textStyle="bold|italic" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="45dp"
                        app:srcCompat="@drawable/dugme30" />

                    <ImageView
                        android:id="@+id/zvezde"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/zvezde" />

                    <TextView
                        android:id="@+id/brojZvezda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="30dp"
                        android:text="5"
                        android:textSize="20dp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:id="@+id/tokeni"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/tokeni" />

                    <TextView
                        android:id="@+id/brojTokena"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="128dp"
                        android:layout_marginTop="30dp"
                        android:text="5"
                        android:textSize="20dp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:id="@+id/rang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="105dp"
                        app:srcCompat="@drawable/rang" />

                    <TextView
                        android:id="@+id/brojRanga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:layout_marginTop="85dp"
                        android:text="5"
                        android:textSize="20dp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="69dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top">

                        <ImageButton
                            android:id="@+id/rangLista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:contentDescription="rang"
                            app:srcCompat="@drawable/dugme32" />


                        <ImageView
                            android:id="@+id/ranglista"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="35dp"
                            app:srcCompat="@drawable/ranglista" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top">

                        <ImageButton
                            android:id="@+id/profil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|top"
                            android:background="@null"
                            android:contentDescription="profil"
                            app:srcCompat="@drawable/dugme31" />


                        <ImageView
                            android:id="@+id/profilSlika"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="35dp"
                            app:srcCompat="@drawable/profil" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/naslov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" slagalica "
                android:textColor="#EA3270"
                android:textSize="48sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/logo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>